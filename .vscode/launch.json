{
  "configurations": [
    {
      "name": "Debug AVA test file",
      "type": "node",
      "request": "launch",
      "preLaunchTask": "npm: pre-debug",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/ava",
      "program": "${file}",
      "outputCapture": "std",
      "skipFiles": [
        "<node_internals>/**/*.js"
      ],
    },
    {
      "name": "Debug 2",
      "type": "pwa-node",
      "request": "launch",
      "cwd": "${workspaceFolder}/tests/esm",
      "runtimeArgs": ["--loader", "ts-node/esm"],
      "program": "throw error.ts",
      "outputCapture": "std",
      "skipFiles": [
        "<node_internals>/**/*.js"
      ],
    }
  ],
}
