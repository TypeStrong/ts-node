{
  "include": ["**/*.ts", "**/*.mts", "**/*.tsx", "**/*.js", "**/*.jsx"],
  "compilerOptions": {
    "module": "CommonJS",
    "allowJs": true,
    "jsx": "react",
    "baseUrl": "./mapped",
    "paths": {
      "map1/*": ["./1-*"],
      "map2/*": ["./2-*", "./2a-*"],
      "map2/specific/*": ["./2-specific-*"],
      "static": ["./static.ts"]
    },
    "moduleResolution": "node"
  },
  "ts-node": {
    "experimentalPathMapping": "both"
  }
}
