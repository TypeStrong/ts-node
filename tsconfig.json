{
  "$schema": "./tsconfig.schemastore-schema.json",
  "compilerOptions": {
    // `target` and `lib` match @tsconfig/bases for node12, since that's the oldest node LTS, so it's the oldest node we support
    "target": "es2019",
    "lib": ["es2019", "es2020.promise", "es2020.bigint", "es2020.string", "dom"],
    "rootDir": "src",
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "types": ["node"],
    "stripInternal": true,
    "incremental": true,
    "skipLibCheck": true,
    "importsNotUsedAsValues": "error"
  },
  "include": [
    "src/**/*"
  ],
  "typedocOptions": {
    "entryPoints": ["./src/index.ts"],
    "readme": "none",
    "out": "website/static/api",
    "excludeTags": ["allof"],
    "categorizeByGroup": false,
    "categoryOrder": ["Basic", "REPL", "Transpiler", "ESM Loader", "Other"],
    "defaultCategory": "Other"
  }
}
