{
  "$schema": "./tsconfig.schemastore-schema.json",
  "compilerOptions": {
    "target": "es2015",
    "lib": ["es2015", "dom"],
    "rootDir": "src",
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "types": ["node"],
    "stripInternal": true,
    "incremental": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "typedocOptions": {
    "entryPoints": ["./src/index.ts"],
    "readme": "none",
    "out": "website/static/api"
  }
}
